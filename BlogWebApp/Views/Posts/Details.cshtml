@model BlogWebApp.Models.PostDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Post</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Post.PostTitle)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Post.PostTitle)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Post.PostContent)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Post.PostContent)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Post.PostAuthor)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Post.PostAuthor)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Post.PostDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Post.PostDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Post.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                Comments
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Comment item in Model.Comments)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CommentContent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CommentAuthor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CommentDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<h4>Share your view</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Details">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PostID" value="@Model.Post.Id" />
            <div class="form-group">
                <label asp-for="CommentContent" class="control-label"></label>
                <input asp-for="CommentContent" class="form-control" />
                <span asp-validation-for="CommentContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CommentAuthor" class="control-label"></label>
                <input asp-for="CommentAuthor" class="form-control" />
                <span asp-validation-for="CommentAuthor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CommentDate" class="control-label"></label>
                <input asp-for="CommentDate" class="form-control" />
                <span asp-validation-for="CommentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
